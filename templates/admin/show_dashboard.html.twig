{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    <h1 class="text-center my-3">Tableau de bord</h1>

    {# ################# FLASHES ################# #}
    <div class="row">
        <div class="col-6 mx-auto">
            {% include 'include/_flashes.html.twig' %}
        </div>
    </div>
    {# ################# FLASHES ################# #}

    {# -------------------------------------------------------------------------------------------------- #}
    {# ################# BUTTONS ################# #}
    <div class="row my-5 mx-auto">
        <div class="col-4">
            <a class=" btn btn-sm btn-outline-dark" href="{{ path('create_article') }}">Ajouter un article</a>
        </div>
        <div class="col-4">
            <a class=" btn btn-sm btn-outline-dark" href="{{ path('create_category') }}">Ajouter une catégorie</a>
        </div>
        <div class="col-4">
            <a class="btn btn-sm btn-outline-dark" href="{{ path('show_archives') }}">Voir les archives</a>
        </div>
    </div>
    {# ################# BUTTONS ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

    {# ################# TABLE 1 ################# #}
    <div class="row">
        <div class="col-10 mx-auto my-4">

            <h2 class="text-center">Tous les articles</h2>


        </div>
    </div>
    {# ################# TABLE 1 ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

    <div class="row">
        {# ################# TABLE 2 ################# #}
        <div class="col-6">

            <h2 class="text-center">Toutes les catégories</h2>

            {# EXERCICE : Faire une table HTML qui affichera toutes les catégories de la BDD #}
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Nom</th>
                        <th>Alias</th>
                        <th>Creé le::</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                        <tr class="text-center aling-middle">
                            <td>{{ categorie.id }}</td>
                            <td>{{ categorie.name }}</td>
                            <td>{{ categorie.alias }}</td>
                            <td>{{ categorie.createdAt | date('d/m/Y') }}</td>
                            <td>
                                <a href="{{ path('update_category', {'id': categorie.id}) }}" class="text-info" title="Modifier la catégorie"><i class="bi bi-pencil-square"></i></i></a>
                                <a href="{{ path('soft_delete_category', {'id': categorie.id}) }}" class="text-danger" title="Archiver la catégorie" onclick="return confirm('Cette action archivera la categorie. Voulez-vous continuer ?')"><i class="bi bi-trash3"></i></a>
                            </td>
                        </tr>  
                    {% endfor %}          
                </tbody>
            
            </table>
        </div>
        {# ################# TABLE 2 ################# #}

    {# -------------------------------------------------------------------------------------------------- #}

        {# ################# TABLE 3 ################# #}
        <div class="col-6">
            <h2 class="text-center">Tous les utilisateurs</h2>

           
        </div>
        {# ################# TABLE 3 ################# #}
    </div>

    {# -------------------------------------------------------------------------------------------------- #}

{% endblock %}