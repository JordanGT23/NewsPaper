{% extends "base.html.twig" %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
    <h1 class="text-center mt-5">Mon Compte:</h1>
    <div class="row">
        <div class="col-8 mx-auto">
            {% include "include/_flashes.html.twig" %}
        </div>
    </div>
	<div class="card col-6 text-center mx-auto mt-5">
		<div class="card-body">
			<h5 class="card-title">Profile: {{ user.fullname | title }}</h5>
			<p class="card-text">Prénom: {{ user.firstname | capitalize }}</p>
			<p class="card-text">Nom: {{ user.lastname | capitalize }}</p>
            <p class="card-text">Email: {{ user.email }}</p>
            <p class="card-text">Total d'articles publiés :  {{ articles | length }}</p>
            <p class="card-text">Total de commentaires publiés :  {{ commentaries | length }}</p>
			<a href="{{ path('changer_password') }}" class="card-link">Changer mon mot de passe</a>
			<a href="#" class="card-link">Supprimer compte</a>
		</div>
        <div class="card-footer text-muted">Compte créé: </div>
	</div>

{% endblock %}
